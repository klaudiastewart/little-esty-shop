<%= link_to "Create New Discount", "/merchant/#{@merchant.id}/bulk_discounts/new", method: :get %>
<section>
  <p>Upcoming Holidays:</p>
  <ol>
    <% @holidays.each_with_index do |holiday, index| %>
      <li id="holiday-<%= holiday.name %>">
        <%= holiday.name %>, on <%= holiday.date %>
        <%= link_to "Create Holiday Discount", "/merchant/#{@merchant.id}/bulk_discounts/new?holiday=#{index}" %>
      </li>
    <% end %>
  </ol>
</section>

<ul>
  <% @discounts.each do |discount| %>
    <li id="discounted-item-<%= discount.id %>">
      <%= link_to "#{discount.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}" %>, Percentage discount: <%= discount.percent_discount * 100 %>%, Quantity threshold: <%= discount.quantity_threshold %> |
      <%= link_to "Delete discount #{discount.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
    </li>
  <% end %>
</ul>
